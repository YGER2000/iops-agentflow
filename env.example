# LLM 配置
LLM_API_KEY=your_api_key_here
LLM_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.7

# API Key 动态获取配置
APIKEY_SERVICE_ENABLED=true
APIKEY_SERVICE_URL=http://127.0.0.1:4532/getApikey
APIKEY_EXPIRE_SECONDS=600
APIKEY_REFRESH_BEFORE_SECONDS=120
APIKEY_SCENE_CODE=P2025122

# Redis 配置（用于存储会话历史和状态）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ===== 基础组件配置（可选） =====

# MySQL 配置（默认禁用，启用时需要安装 aiomysql）
MYSQL_ENABLED=false
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=agentflow
MYSQL_POOL_SIZE=10
MYSQL_POOL_RECYCLE=3600

# MongoDB 配置（默认禁用，启用时需要安装 motor）
MONGODB_ENABLED=false
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USER=
MONGODB_PASSWORD=
MONGODB_DATABASE=agentflow
MONGODB_AUTH_SOURCE=admin

# Apollo 配置中心（默认禁用，启用时需要安装 apollo-client）
APOLLO_ENABLED=false
APOLLO_APP_ID=your_app_id
APOLLO_CLUSTER=default
APOLLO_CONFIG_SERVER_URL=http://localhost:8080
APOLLO_NAMESPACE=application
APOLLO_ENV=DEV
APOLLO_SECRET=

# 服务器配置
HOST=0.0.0.0
PORT=8000

# 日志配置
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_DIR=logs  # 日志文件目录
LOG_FILE=app.log  # 主日志文件名（平台核心日志）
LOG_TO_FILE=true  # 是否输出到文件
LOG_TO_CONSOLE=true  # 是否输出到控制台
# 注意：智能体日志会自动分离到独立的文件中，格式为：<LOG_DIR>/<agent_name>.log
# 例如：logs/common_agent.log, logs/other_agent.log 等

# uvicorn配置
UVICORN_RELOAD=False
UVICORN_WORKERS=2

